@model Menu.Models.Dish

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="d-flex justify-content-center ">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width:50%" alt="Maggarita Image" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") NGN
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach(var item in Model.DishIngredient)
        </ul>
        @Model.Ingredient.ToString()
    </div>
</div>