@model Menu.Models.Dish

@{
    ViewData["Title"] = "Dish Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Dish Image -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="image-wrapper">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Name Image" style="object-fit: cover; height: 400px; width: 100%; border-radius: 12px;" />
            </div>
        </div>
        <!-- Dish Details and Ingredients -->
        <div class="col-lg-6 d-flex flex-column justify-content-center">
            <!-- Dish Name -->
            <h2 class="text-center mb-3" style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #343a40; font-weight: 700; text-shadow: 1px 1px 2px rgba(0,0,0,0.1);">
                @Model.Name
            </h2>
            <!-- Dish Price -->
            <h4 class="text-center mb-4" style="font-family: 'Roboto', sans-serif; font-size: 1.5rem; color: #28a745; font-weight: 600;">
                @Model.Price.ToString("N2") NGN
            </h4>
            <!-- Ingredients Section -->
            <div class="ingredients-container p-4" style="max-height: 300px; overflow-y: auto; background-color: #ffffff; border: 2px solid #007bff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">
                <h5 class="mb-3 text-center" style="color: #007bff; font-family: 'Roboto', sans-serif; font-weight: 600; font-size: 1.25rem;">Ingredients</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.DishIngredients)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="background-color: #f8f9fa; color: #343a40; border: 1px solid #dee2e6; border-radius: 5px; margin-bottom: 8px; padding: 12px;">
                            @item.Ingredient.Name
                        </li>
                    }
                </ul>
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-primary btn-lg" asp-action="Index" style="border-radius: 50px;">Back to Menu</a>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 60%; /* Maintain aspect ratio */
        background: linear-gradient(to bottom, #f0f0f0, #d0d0d0); /* Wood-like gradient */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3); /* Shadow to simulate depth */
        border-radius: 12px; /* Rounded corners to match image */
    }

        .image-wrapper img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 12px; /* Rounded corners */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3); /* 3D effect shadow */
        }
</style>
