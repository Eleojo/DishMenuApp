@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width:70%" alt="Maggarita Image" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") NGN
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Dish Details</a>
                </div>
            </div>             
        }
    </div>
</div>