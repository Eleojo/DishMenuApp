@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "Menu Index";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card border-0 rounded-lg shadow-lg transform-hover">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 300px;" />
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark mb-2">@item.Name</h5>
                        <p class="card-text text-secondary mb-3">@item.Price.ToString("N2") NGN</p>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optional: Add custom CSS for further customization -->
<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 15px; /* Rounded corners for a softer look */
    }

    .transform-hover:hover {
        transform: scale(1.05);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .card-img-top {
        border-bottom: 2px solid #f1f1f1;
        border-radius: 15px 15px 0 0; /* Rounded top corners */
    }

    .card-body {
        background: #fff; /* Background color */
        border-radius: 0 0 15px 15px; /* Rounded bottom corners */
        padding: 20px; /* Added padding */
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1); /* Inner shadow for depth */
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333; /* Darker text for better readability */
    }

    .card-text {
        font-size: 1.25rem;
        color: #666; /* Slightly lighter text for contrast */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
        border-radius: 20px; /* Rounded button edges */
        padding: 10px 20px; /* Increased padding for button */
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
